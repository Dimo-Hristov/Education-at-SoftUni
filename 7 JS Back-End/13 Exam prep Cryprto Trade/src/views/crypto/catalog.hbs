    <main>
        <section class="crypto-market">
            <h1><span>Crypto</span> Trade</h1>
            <div class="offer-list">

                    {{#if isempty}}

                    <div class="no-offer">
                        <p>There are no crypto offers found!</p>
                    </div>

                    {{else}}

                        {{#each offers}}

                    <div class="coin">
                        <div class="coin-img">
                            <img src="{{image}}">
                        </div>

                        <div class="coin-info">
                            <h1>{{name}}</h1>
                            <p><span>Price: </span>${{price}}</p>
                            <p><span>Payment: </span>{{paymentMethod}}</p>
                        </div>

                        <a href="/crypto/{{_id}}/details" class="btn-details">Details</a>
                    </div>

                    {{/each}}
                {{/if}}

            </div>

        </section>
    </main>
