    <main>
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{post.image}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{post.name}}</h1>
                    <h3 id="payment">Payment method: {{post.paymentMethod}}</h3>
                    <p id="price"><span>Price: ${{post.price}}</span></p>
                    <p id="description">{{post.description}}</p>
                </div>
                <div class="product-btn">

                    {{#if isAuthenticated}}

                        {{#if isOwner}}
                        
                            <div class="author">
                                <a href="/crypto/{{post._id}}/edit" class="btn-edit">Edit</a>
                                <a href="/crypto/{{post._id}}/delete" class="btn-delete">Delete</a>
                            </div> 

                            
                        {{else}}

                            {{#if hasBought}}
                                <p class="buy-message">You already bought these crypto coins.</p>
                            {{else}}
                                <a href="/crypto/{{post._id}}/buy" class="btn-buy">Buy</a>
                            {{/if}}
                                

                        {{/if}}

                    {{/if}}
                </div>
            </div>
        </section>
    </main>
