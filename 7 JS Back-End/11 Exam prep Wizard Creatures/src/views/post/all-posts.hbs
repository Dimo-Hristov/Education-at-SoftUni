        <main>

            <section id="catalog">
                <h1>All posts</h1>
                <div class="band">

                    {{#if isEmpty}}
                    <!-- If there are still no posts in the database display: -->

                    <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div>
                    {{else}}
                    <!-- If there are posts for creature in the database display each of them -->

                    {{#each allPosts}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{image}}"
                                alt="{{name}}">
                        </div>
                        <div class="back">
                            <h1>{{name}}</h1>
                            <h2>Species: {{species}}</h2>
                            <p>Description: {{description}} </p>
                            <a href="/posts/{{_id}}/details" class="details">Details</a>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}

                    
                    <!-- <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div> -->
                </div>
            </section>
        </main>