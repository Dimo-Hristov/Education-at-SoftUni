{{#each cats}}
<article>
    <h2>{{name}}</h2>

    <p>Cat {{name}}is {{age}} years old</p>
</article>
{{/each}}

<form method="post"> 
    <label for="name">Name</label>
    <input type="text" name="name" id="name"/>
    <label for="age">Age</label>
    <input type"number" name="age" id="age"/>
    <button type="submit">Submit</button>
</form>