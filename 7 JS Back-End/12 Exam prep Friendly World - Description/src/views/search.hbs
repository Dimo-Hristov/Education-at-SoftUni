<main class="search">
  <!-- Search Page (Only for logged-in users) -->
  <section id="search">
    <h2>Search by Location</h2>

    <form class="search-wrapper cf" method="POST">
      <input
        id="#search-input"
        type="text"
        name="searchData"
        placeholder="Search here..."
        required
      />
      <button type="submit">Search</button>
    </form>

    <div id="search-container">

      {{#if isEmpty}}

        <div id="no-post">
          <h2>There are no results found.</h2>
        </div>

        {{else}}

            {{#each matchingAnimals}}

              <ul class="card-wrapper">
                
                <li class="card">
                  <img src="{{image}}" />
                  <p>
                    <strong>Name: </strong><span class="name">{{name}}</span>
                  </p>
                  <p>
                    <strong>Location: </strong><span class="location">{{location}}</span>
                  </p>
                  <p><strong>Need of:</strong><span class="need-of">{{need}}</span></p>
                  <a class="details-btn" href="/animals/{{_id}}/details">Details</a>
                </li>
              </ul>

              {{/each}}
      {{/if}}

    </div>
  </section>
</main>
